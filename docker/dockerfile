FROM ubuntu:24.04

ARG GO_URL=go.dev

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=UTC \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

RUN apt-get update \
    -o Acquire::AllowInsecureRepositories=true \
    -o Acquire::AllowDowngradeToInsecureRepositories=true && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        gnupg \
        git \
        locales \
        jq \
        unzip \
        build-essential \
        python3 \
        vim \
        && locale-gen en_US.UTF-8 && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /var/cache/apt/archives/*

RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    node --version

ENV BUN_INSTALL="/root/.bun"
ENV PATH="$BUN_INSTALL/bin:$PATH"
RUN curl -fsSL https://bun.sh/install | bash && \
    bun --version

# Set Go environment variables
ENV GOPATH="/root/go"
ENV PATH="$GOPATH/bin:/usr/local/go/bin:$PATH"

# Install Go (Golang)
RUN GO_VERSION="1.25.5" && \
    ARCH=$(dpkg --print-architecture) && \
    case $ARCH in \
        amd64) GO_ARCH="amd64" ;; \
        arm64) GO_ARCH="arm64" ;; \
        *) echo "Unsupported architecture: $ARCH" && exit 1 ;; \
    esac && \
    curl -fsSL "https://${GO_URL}/dl/go${GO_VERSION}.linux-${GO_ARCH}.tar.gz" | tar -C /usr/local -xzf - && \
    ln -sf /usr/local/go/bin/go /usr/local/bin/go && \
    ln -sf /usr/local/go/bin/gofmt /usr/local/bin/gofmt && \
    go version

ENV PATH="/root/.local/bin:$PATH"
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Layer 1: OpenCode CLI Installation & Verification
RUN bun add -g opencode-ai@latest && \
    echo "‚úÖ OpenCode CLI installed:" && \
    opencode --version

# Layer 2: mgrep Installation & Verification  
RUN npm install -g @mixedbread/mgrep && \
    echo "‚úÖ mgrep installed:" && \
    mgrep --version

# Layer 3: OpenSpec Installation & Verification
RUN npm install -g @fission-ai/openspec@latest && \
    echo "‚úÖ OpenSpec installed:" && \
    openspec --version

# Layer 4: mgrep Integration & Verification
RUN mgrep install-opencode && \
    echo "‚úÖ mgrep-OpenCode integration completed"

# Layer 5: Spec Kit Installation & Verification
RUN uv tool install specify-cli --from git+https://github.com/github/spec-kit.git && \
    echo "‚úÖ Spec Kit installed:" && \
    specify version

# Layer 6: Oh-My-OpenCode Installation & Verification
RUN bunx oh-my-opencode install --no-tui --claude=no --chatgpt=no --gemini=no && \
    echo "‚úÖ Oh-My-OpenCode installed and configured" && \
    echo "Checking configuration..." && \
    (test -f /root/.config/opencode/opencode.json && \
     echo "‚úÖ OpenCode config exists" || \
     echo "‚ö†Ô∏è OpenCode config will be created on first use")

# Layer 7: Final Comprehensive Verification
RUN echo "üîç Final verification of all components..." && \
    echo "üß† OpenCode:" && opencode --version && \
    echo "üîç mgrep:" && mgrep --version && \
    echo "üìã OpenSpec:" && openspec --version && \
    echo "üå± Spec Kit:" && specify version && \
    echo "üöÄ Oh-My-OpenCode:" && test -d /root/.config/opencode/plugins && echo "‚úÖ Installed" || echo "‚ùå Not found" && \
    echo "‚öôÔ∏è Go:" && go version && \
    echo "üéâ All tools successfully installed!"

COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

WORKDIR /workspace

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
